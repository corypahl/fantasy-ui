# Fantasy Football UI Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Sleeper API Configuration
SLEEPER_BASE_URL=https://api.sleeper.app/v1
SLEEPER_RATE_LIMIT=1000

# App Configuration
APP_NAME=Fantasy Football Manager
APP_VERSION=1.0.0
# Season will automatically use current year (leave empty for auto-detection)
DEFAULT_SEASON=

# Feature Flags
ENABLE_DEBUG_LOGGING=false
ENABLE_ANALYTICS=false
ENABLE_OFFLINE_MODE=true

# Cache Configuration
PLAYER_CACHE_DURATION=86400000
LEAGUE_CACHE_DURATION=300000

# UI Configuration
DEFAULT_THEME=dark
AUTO_REFRESH_INTERVAL=300000
MAX_PLAYERS_DISPLAY=50

# ========================================
# PERSONAL TEAM CONFIGURATION
# ========================================
# WARNING: Never commit .env.local to GitHub!
# These values contain your personal information

# Sleeper Configuration
# You can have multiple leagues - use comma-separated values
SLEEPER_USERNAME=your_sleeper_username
SLEEPER_LEAGUE_IDS=league_id_1,league_id_2,league_id_3

# ESPN Configuration
# You can have multiple teams - use comma-separated values
ESPN_LEAGUE_IDS=league_id_1,league_id_2
ESPN_TEAM_IDS=team_id_1,team_id_2
ESPN_SWID=your_espn_swid_cookie
ESPN_ESPNS2=your_espn_espns2_cookie
